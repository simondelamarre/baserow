{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es5", // (5, 6) => es2020 // do not forget
        "module": "commonjs", // none, amd, commonjs,  es6 ?
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "allowJs": true,
        "removeComments": true,
        "sourceMap": true,
        "esModuleInterop": true
    },
    "lib": [ 
        "es2015",
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ]
}